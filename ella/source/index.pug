          .owl-carousel.home-slider-brand.js-brand.text-center
              each item in [1, 2, 3, 4, 5]
                a(href="#!")
                  img.brand__img(src="images/brand3.png", alt="pic")
                a(href="#!")
                  img.brand__img(src="images/brand4.png", alt="pic")
                a(href="#!")
                  img.brand__img(src="images/brand2.png", alt="pic")
                a(href="#!")
                  img.brand__img(src="images/brand5.png", alt="pic")
                a(href="#!")
                  img.brand__img(src="images/brand1.png", alt="pic")
      section.instagram
        h1.title #ELLA ON INSTAGRAM
        .container
          h5.instagram__describe
