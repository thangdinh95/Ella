      +nav
      +slide
      .container
        section.banner-top
          .row
            .col-12.col-md-4
              +banner-home("EDITOR'S PICK","top-banner1")
            .col-12.col-md-4
              +banner-home("SHOES","top-banner2","black")
            .col-12.col-md-4
              +banner-home("ACCESSORIES","top-banner3")
        section.new-arrival
          h1.main-title NEW ARRIVALS
          .row
            .col-md-4.col-6.col
              +product-block("SALE")
